# Maintainer: Christian Neukirchen <chneukirchen@gmail.com>
pkgname=v4l2grab
pkgver=0.2a
pkgrel=1
pkgdesc="utility for grabbing JPEGs from V4L2 devices"
arch=(i686 x86_64)
url="http://github.com/twam/v4l2grab"
license=('GPL')
groups=()
depends=(libjpeg)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://github.com/twam/v4l2grab/raw/e21e627126705b1bce1ceddfe82b47c1ac8ef7a5/v4l2grab.c)
noextract=()
md5sums=('5712eb93e60546f53feaea10d18e2641')

build() {
  cd "$srcdir"

  gcc v4l2grab.c -o v4l2grab -Wall -ljpeg -DIO_READ -DIO_MMAP -DIO_USERPTR || return 1
}

package() {
  cd "$srcdir"

  install -D -m755 v4l2grab "${pkgdir}/usr/bin/v4l2grab" || return 1
}

# vim:set ts=2 sw=2 et:
